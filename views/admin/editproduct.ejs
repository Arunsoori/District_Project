<%- include('../admin/layouts/admin-header.ejs') %>






<body>
    <div class="screen-overlay"></div>
    
    <main class="main-wrap">
        
        <section class="content-main">
            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <div>
                            <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                            <!-- <button  type="submit" class="btn btn-md rounded font-sm hover-up">Publich</button> -->
                        </div>
                    </div>
                </div>
            </div>
            <form action="/admin/updateProduct/<%=product._id%>"  method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Product title</label>
                                        <input type="text" value="<%=product.productName%>" name="productName" placeholder="Type here" class="form-control">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" value="" name="description"  class="form-control" rows="4"><%=product.description%></textarea>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Brand name</label>
                                        <select name="brand"  class="form-select">
                                            <option> D11</option>
                                            <!-- <option> PETTER ENGLAND </option>
                                            <option> LEVIS </option> -->
                                        </select>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Cost in USD</label>
                                        <input type="text" value="<%=product.price%>"  name="price" placeholder="$00.0" class="form-control">
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>3. Category</h6>
                                </div>
                                 <div class="col-md-9">
                                    <div class="mb-4">
              
                                        <% categories.forEach(function(x){ %>
                                        <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                            <input class="form-check-input" checked="" value="<%=product.mycategory%>" name="mycategory" type="radio">
                                            
                                                  <span class="form-check-label">    <%= x.name %>
                                                  </span>
                                        </label>
                                        <% }) %>
                                        
                                        
                                        
                                      

                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Media</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <span class="form-group">
                                            <img src="/uploads/<%= product.image[0]%>" alt="" style="width: 100px ; height: 100px ;">
                                        </span>
                                        <span class="form-group">
                                            <img src="/uploads/<%= product.image[1]%>" alt="" style="width: 100px ; height: 100px ;">
                                        </span>
                                        <span class="form-group">
                                            <img src="/uploads/<%= product.image[2]%>" alt="" style="width: 100px ; height: 100px ;">
                                        </span>
                                        <span class="form-group">
                                            <img src="/uploads/<%= product.image[3]%>" alt="" style="width: 100px ; height: 100px ;">
                                        </span>
                                        <label class="form-label">Images</label>
                                        <input name="image" value="/uploads/<%= product.image[0]%>" class="form-control" multiple id="input-5" type="file">
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- .row end// -->
                            <button  type="submit" class="btn btn-md rounded font-sm hover-up">update</button>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </form>
        </section> <!-- content-main end// -->
        <%- include('../admin/layouts/admin-footer.ejs') %>

