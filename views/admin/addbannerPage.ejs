
<%- include('../admin/layouts/admin-header.ejs') %>


<section class="content-main">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">Add New Banner</h2>
                <div>
                    <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                    <!-- <button  type="submit" class="btn btn-md rounded font-sm hover-up">Publich</button> -->
                </div>
            </div>
        </div>
    </div>
    <form  id="banner-form" action="/admin/addbanner"  method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>1. General info</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="form-label">Banner title</label>
                                <input id="bname"  type="text" name="bannerName" placeholder="Type here" class="form-control">
                      <p id="messagebn" style="color: red" ;> </p>
                          
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea  id="bdescription" placeholder="Type here" name="description"  class="form-control" rows="4"></textarea>
                      <p id="messagebd" style="color: red" ;> </p>

                            </div>
                            
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->
                   
                    <div class="row">
                        <div class="col-md-3">
                            <h6>4. Media</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="form-label">Images</label>
                                <input id="bimage" name="image" multiple class="form-control" id="input-5" type="file">
                      <p id="messagebi" style="color: red" ;> </p>

                            </div>
                        </div> <!-- col.// -->
                    </div> <!-- .row end// -->
                    <button  type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
</section>
<script>
    var bannerform = document.getElementById("banner-form");
bannerform.addEventListener("submit", validateBanner)

function validateBanner(event) {

event.preventDefault();




const bannername= document.getElementById("bname").value
const bdescription = document.getElementById("bdescription").value
const bimage = document.getElementById("bimage").value







if(!bannername){
  document.getElementById("messagebn").innerHTML="bannername is required"
  return
}
if(!bdescription) {
  
  document.getElementById("messagebd").innerHTML="description  required"
  return
} 
if(!bimage) {
  
  document.getElementById("messagebi").innerHTML="image required"
  return
} 



 bannerform.submit()

}

</script>
